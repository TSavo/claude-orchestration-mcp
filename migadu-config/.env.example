# Migadu Email Configuration
# Copy this file to .env and fill in your actual Migadu credentials

# Migadu SMTP Configuration
MIGADU_USERNAME=your-email@yourdomain.com
MIGADU_PASSWORD=your-migadu-password
MIGADU_HOST=smtp.migadu.com
MIGADU_PORT=587

# Migadu API Configuration (for domain/mailbox management)
MIGADU_API_USERNAME=your-email@yourdomain.com
MIGADU_API_PASSWORD=your-migadu-password
MIGADU_API_BASE_URL=https://api.migadu.com/v1

# Test Email Configuration
TEST_FROM_EMAIL=test@yourdomain.com
TEST_TO_EMAIL=test-recipient@example.com
TEST_DOMAIN=yourdomain.com

# MailHog Configuration (local testing)
MAILHOG_HOST=mailhog
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug